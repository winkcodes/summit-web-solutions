---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_CONFIG } from '../config/site';
---

<BaseLayout title="Professional Web Development & Digital Marketing Services">
  <!-- Skip to main content link for accessibility -->
  <a href="#main-content" class="skip-to-content">
    Skip to main content
  </a>
  
  <!-- Hero Section -->
  <section 
    id="main-content"
    class="min-h-screen flex items-center justify-center gradient-bg relative"
  >
    <div class="container text-center text-white relative z-10">
      <h1 class="mb-6 font-extrabold text-balance">
        Welcome to <span class="text-accent-200">Summit Web Solutions</span>
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-gray-200 max-w-3xl mx-auto text-balance">
        Professional Web Development & Digital Marketing Services to elevate your online presence
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact" 
          class="btn-primary transform hover:scale-105 transition-transform duration-200"
        >
          Get Started
        </a>
        <a 
          href="/services" 
          class="btn btn-outline border-white text-white hover:bg-white hover:text-primary transform hover:scale-105 transition-transform duration-200"
        >
          Our Services
        </a>
      </div>
    </div>
    
    <!-- Background decoration -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-accent/20 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-primary/20 rounded-full blur-3xl"></div>
    </div>
  </section>
  
  <!-- Technology Stack Section -->
  <section class="section bg-gray-50">
    <div class="container text-center">
      <h2 class="mb-6 gradient-text">Built with Modern Technology</h2>
      <p class="text-lg text-gray-600 mb-12 max-w-2xl mx-auto">
        Our websites are built using cutting-edge technologies to ensure performance, scalability, and maintainability.
      </p>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="card p-6 hover:scale-105 transition-transform duration-200">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
          </div>
          <h3 class="font-semibold text-primary mb-2">Astro</h3>
          <p class="text-sm">Fast, Modern Framework</p>
        </div>
        
        <div class="card p-6 hover:scale-105 transition-transform duration-200">
          <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-accent" fill="currentColor" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="3"/>
              <path d="M12 1v6m0 8v6M5.6 5.6l4.2 4.2m8.4 8.4L14 14M1 12h6m8 0h6M5.6 18.4l4.2-4.2m8.4-8.4L14 10"/>
            </svg>
          </div>
          <h3 class="font-semibold text-accent mb-2">React</h3>
          <p class="text-sm">Interactive Components</p>
        </div>
        
        <div class="card p-6 hover:scale-105 transition-transform duration-200">
          <div class="w-12 h-12 bg-success/10 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-success" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-success mb-2">TypeScript</h3>
          <p class="text-sm">Type Safety</p>
        </div>
        
        <div class="card p-6 hover:scale-105 transition-transform duration-200">
          <div class="w-12 h-12 bg-warning/10 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-warning" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-warning mb-2">Tailwind</h3>
          <p class="text-sm">Utility-First CSS</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Quick CTA Section -->
  <section class="section">
    <div class="container text-center">
      <div class="bg-white rounded-2xl shadow-xl p-8 lg:p-12 max-w-4xl mx-auto">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4 gradient-text">
          Ready to Get Started?
        </h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          Let's discuss your project and create something amazing together. Contact us today for a free consultation.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-primary">
            Start Your Project
          </a>
          <a href="/portfolio" class="btn-outline">
            View Our Work
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
